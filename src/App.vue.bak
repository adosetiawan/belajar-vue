<script setup lang="ts">
import { computed, reactive, ref } from 'vue';
import MainButton from './components/MainButton.vue';
const buttonSetting = {
  title: 'button objek setting',
  disabled: true,
};

const count = ref(1); 
const state = reactive({
  name: 'Adrian Setiawan',
  age: 20,
  address: 'Jl. Raya No. 1',
});
const increment = () =>{
  return count.value++;
}

const author = reactive({
  name: 'Adrian Setiawan',
  age: 20,
  address: 'Jl. Raya No. 1',
  books:[
    'Vue.js for Beginners',
    'Vue.js for Intermediate',
    'Vue.js for Advanced',
    'Vue.js for Expert',
  ]
})
const isPublisher = computed(() => {
  console.log('isPublisher', author.books.length);
  return author.books.length > 0 ? 'is Publisher' : 'is not Publisher';
});
</script>


<template>
  <OptionComponent />
  <CompositionComponent/>
  <MainButton :title="'ini buttin komponen'"></MainButton>
  <MainButton v-bind:title="'ini buttin menggunakan v bind'" v-bind:disabled="true"></MainButton>
  <MainButton v-bind="buttonSetting"></MainButton>
  <h1>ref</h1>
  <button @click="increment">{{ count }}</button>
  <h1>Reactive</h1>
  <button @click="state.age++">
    {{ state.name }} {{ state.age }} {{ state.address }}
  </button>
  <h1>Computed Properties</h1>
  <div>
    {{ isPublisher }}
  </div>
</template>

